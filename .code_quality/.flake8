[flake8]
max-line-length = 140
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    venv,
    .venv,
    .env,
    env,
    experiments
per-file-ignores =
    # Module level import not at top of file. This is due newrelic initialization.
    */app/__main__.py: E402
    # Ignore line length for prompt files as they contain long text templates
    src/prompts/*.py: E501,W291
extend-ignore =
    # See https://github.com/PyCQA/pycodestyle/issues/373
    E203,
